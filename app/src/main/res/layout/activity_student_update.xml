<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentupdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74CEF6"
    tools:context=".student_update">

    <Button
        android:id="@+id/bss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="32dp"
        android:text="@string/save_student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/plsu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/plsu2"
        app:layout_constraintStart_toEndOf="@+id/tvsu1" />

    <EditText
        android:id="@+id/plsu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/plsu3"
        app:layout_constraintStart_toEndOf="@+id/tvsu2" />

    <EditText
        android:id="@+id/plsu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/plsu4"
        app:layout_constraintStart_toEndOf="@+id/tvsu3" />

    <EditText
        android:id="@+id/plsu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/plsu5"
        app:layout_constraintStart_toEndOf="@+id/tvsu4" />

    <EditText
        android:id="@+id/plsu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/plsu6"
        app:layout_constraintStart_toEndOf="@+id/tvsu5" />

    <EditText
        android:id="@+id/plsu6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="81dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bss"
        app:layout_constraintStart_toEndOf="@+id/tvsu6" />

    <TextView
        android:id="@+id/tvsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:text="@string/update_student"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvsu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="46dp"
        android:text="@string/studnet_id"
        app:layout_constraintBottom_toTopOf="@+id/tvsu2"
        app:layout_constraintEnd_toStartOf="@+id/plsu1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvsu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="46dp"
        android:text="@string/student_name"
        app:layout_constraintBottom_toTopOf="@+id/tvsu3"
        app:layout_constraintEnd_toStartOf="@+id/plsu2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvsu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:text="@string/student_birth"
        app:layout_constraintBottom_toTopOf="@+id/tvsu4"
        app:layout_constraintEnd_toStartOf="@+id/plsu3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvsu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="45dp"
        android:text="@string/address"
        app:layout_constraintBottom_toTopOf="@+id/tvsu5"
        app:layout_constraintEnd_toStartOf="@+id/plsu4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvsu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="53dp"
        android:text="@string/contact"
        app:layout_constraintBottom_toTopOf="@+id/tvsu6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvsu6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="161dp"
        android:text="@string/Alvele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plsu6"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>